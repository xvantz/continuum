{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/*"],
      "@web/*": ["web/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./server/node_modules/@types",
      "./shared/node_modules/@types",
      "./web/node_modules/@types"
    ]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "web/**/*.ts",
    "*.ts"
  ]
}
